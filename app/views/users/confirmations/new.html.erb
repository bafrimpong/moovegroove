
<title>Moove & Groove :: Resend Confirmation Instructions</title>
    
<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>

  <!-- for error messages -->
  <%= render "users/shared/error_messages", resource: resource %>

  <h1 class="h3 mb-3 font-weight-normal">Confirmation Instructions</h1>
  <p class="text-danger"><em>Send resend account confirmation instructions here</em></p>

  <%= f.label :email, class: "sr-only", for: "userEmail" do %>E-mail<% end %>
  <%= f.email_field :email, class: "form-control", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), required: true, id: "userEmail" %>
  
  <%= f.submit "Resend Instructions", class: "btn btn-lg btn-primary btn-block" %>

  <%= render "users/shared/links" %>

<% end %>